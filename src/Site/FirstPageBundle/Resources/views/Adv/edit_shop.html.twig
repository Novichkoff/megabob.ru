{% extends 'SiteFirstPageBundle::layout.html.twig' %}
{% form_theme form 'SiteFirstPageBundle:Form:fields.html.twig' %}

{% block title 'Редактирование компании' %}   

                {% block content %}
                    <div class="clearfix">

                        {% trans_default_domain 'FOSUserBundle' %}

                        {% if form %}
                            <div class="col-sm-9 padding-5">
                                <h1>Редактирование компании</h1>

                                {% for flashMessage in app.session.flashbag.get('noticesite') %}
                                    <div class="alert alert-success alert-dismissible" role="alert">
                                        <button type="button" class="close" data-dismiss="alert"><span
                                                    aria-hidden="true">&times;</span><span
                                                    class="sr-only">Закрыть</span></button>
                                        {{ flashMessage|raw }}
                                    </div>
                                {% endfor %}
                                {% for flashMessage in app.session.flashbag.get('alertsite') %}
                                    <div class="alert alert-danger alert-dismissible" role="alert">
                                        <button type="button" class="close" data-dismiss="alert"><span
                                                    aria-hidden="true">&times;</span><span
                                                    class="sr-only">Закрыть</span></button>
                                        {{ flashMessage|raw }}
                                    </div>
                                {% endfor %}                                

                                <div id="add_adv">
                                    {% if company.icon is defined %}
										{% if company.icon %}
											<div class="clearfix">
												<div class="col-sm-offset-3 col-sm-3 clearfix">
													<img class="img-responsive"
														 src="{{ asset('images/shops/images/') }}{{ company.icon }}"
														 alt="{{ company.name }}" title="{{ company.name }}"><br>
												</div>
											</div>
										{% endif %}
									{% endif %}
									<form class="form-horizontal" id="add_shop_form" role="form" method="POST" {{ form_enctype(form) }}>
                                        {{ form_javascript(form) }}
                                        {{ form_widget(form) }}
                                        <div class="col-sm-offset-5 col-sm-7 padding-5 clearfix">
                                            <button class="btn btn-default pull-right" type="button" id="shop_save">
                                                Сохранить
                                            </button>
                                        </div>
                                        <br><br>
                                    </form>
                                </div>
                            </div>

                            <!-- Правая сторона страницы -->
                            <div class="col-sm-3 padding-5">

                                <div class="panel panel-info">
                                    <div class="panel-heading">
                                        <h4 class="panel-title">Магазины - компании</h4>
                                    </div>
                                    <div class="panel-body">
                                        Размещение магазина или компании позволит вам получить уникальную страницу всех
                                        объявлений своей организации, а также дополнительную информацию внутри каждого
                                        объявления. Рядом с названием фирмы будет расположен ваш логотип, размещена
                                        контактная информация.
                                    </div>
                                </div>

                                {% include 'SiteFirstPageBundle:Default:cabinet.html.twig' %}

                            </div>

                        {% endif %}

                    </div>
                {% endblock %}