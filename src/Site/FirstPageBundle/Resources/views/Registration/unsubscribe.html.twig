{% extends '::base.html.twig' %}

{% block body %}
	<div class="container"><br><br>
		{% if email %}
			<div class="alert alert-success alert-dismissible" role="alert">
				<button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Закрыть</span></button>
				<strong>Всё отлично!</strong> Мы удалили адрес <strong>{{ email }}</strong> из рассылки.
			</div>
		{% else %}
			<div class="alert alert-danger alert-dismissible" role="alert">
				<button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Закрыть</span></button>
				<strong>Ошибка!</strong> Что-то пошло не так. Обратитесь к администрации сайта.
			</div>
		{% endif %}
	</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        var timerMulti;
        $( document ).ready( function() { timerMulti = window.setTimeout("document.location.href = '/';", 3000); });
    </script>
{% endblock %}