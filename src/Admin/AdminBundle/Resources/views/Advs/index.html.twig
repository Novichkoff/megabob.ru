{% extends 'AdminAdminBundle::layout.html.twig' %}
{% block content %}
    <h1>Объявления</h1>
    <div class="clearfix"><br></div>

    {% for flashMessage in app.session.flashbag.get('notice1') %}
        <div class="alert alert-success">
            {{ flashMessage|raw }}
        </div>
    {% endfor %}

    <div class="clearfix">
        <div class="col-xs-6 col-sm-4 col-md-3 col-lg-3 text-center">
            <a href="{{ url('admin_admin_categoriespage') }}">
                <img width="50" src="{{ asset('/bundles/adminadmin/images/categories.png') }}">
                <h3>Категории</h3>
            </a>
        </div>
        <div class="col-xs-6 col-sm-4 col-md-3 col-lg-3 text-center">
            <a href="{{ path('admin_admin_advspage') }}">
                <img width="50" src="{{ asset('/bundles/adminadmin/images/knotes.png') }}">
                <h3>Объявления</h3>
                {% if for_moders.advs %}<span class="badge bg-red">{{ for_moders.advs }}</span>{% endif %}
            </a>
        </div>
    </div>


    <div class="clearfix"><br></div>
    <a class="btn btn-default" href="{{ path('admin_admin_homepage') }}" title="Назад"><span class="glyphicon glyphicon-arrow-left"></span> Назад</a>

{% endblock %}